@model IEnumerable<SampleMVCSite.Models.Product>
@{
    ViewBag.Title = "Product";
}

<h2>Product</h2>

<table class="table">
    <tr></tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                <img style="width:25%" src="/images/@item.ImageUrl" alt="@item.Description" />
            </td>
            <td>
                @Html.ActionLink(item.Description, "Details", new { id = item.ProductId })
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>


    </tr>
    }

</table>

@Html.ActionLink("Product List", "ProductsList", null, new { @class = "btn btn-lg btn-info" })

